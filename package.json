{
  "name": "node-typescript-library-starter",
  "version": "0.0.0",
  "description": "A clean Node.js TypeScript library starter template with essential string, array, object, async, and validation utilities",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chaslui/typescript-library-starter.git"
  },
  "homepage": "https://github.com/chaslui/typescript-library-starter",
  "license": "MIT",
  "scripts": {
    "playground": "tsx playground/index.ts",
    "playground:build": "rimraf dist-playground && unbuild --config playground.config.ts && chmod +x dist-playground/index.mjs",
    "playground:run": "node dist-playground/index.mjs",
    "dev": "tsx playground/index.ts",
    "build": "rimraf dist && unbuild",
    "build:dev": "unbuild --stub",
    "build:all": "pnpm build && pnpm playground:build",
    "lint": "eslint .",
    "test": "vitest --run",
    "test:modules": "node test-modules.js",
    "test:watch": "vitest --watch",
    "coverage": "vitest run --coverage",
    "prepare": "husky install",
    "release": "release-it",
    "commitlint": "commitlint --edit"
  },
  "lint-staged": {
    "*.ts": "eslint --fix",
    "*": "prettier -w -u"
  },
  "keywords": [
    "typescript",
    "esm",
    "cjs",
    "commonjs",
    "modules",
    "nodejs",
    "utilities",
    "unbuild",
    "vitest",
    "eslint"
  ],
  "author": "ChasLui <chaslui@outlook.com> (https://twitter.com/chaslui1)",
  "type": "module",
  "sideEffects": false,
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "src",
    "dist"
  ],
  "devDependencies": {
    "@babel/types": "^7.25.7",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.34.0",
    "@types/node": "^24.3.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.12.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "prettier": "^3.6.2",
    "release-it": "^17.6.0",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.41.0",
    "unbuild": "^3.6.1",
    "vitest": "^3.2.4"
  },
  "bugs": {
    "url": "https://github.com/chaslui/typescript-library-starter/issues"
  },
  "directories": {
    "test": "tests"
  }
}
